<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                            http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="provider" class="com.laibao.spring5.chapter3.provider.impl.HelloWorldMessageProvider"/>

    <bean id="render" class="com.laibao.spring5.chapter3.render.impl.StandardOutMessageRender" p:messageProvider-ref="provider"/>

    <bean id="renderOld" class="com.laibao.spring5.chapter3.render.impl.StandardOutMessageRender" >
        <property name="messageProvider" ref="provider"/>
    </bean>
</beans>